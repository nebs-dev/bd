{% extends 'admin.html.twig' %}
{% block content %}
<div class="row no-pad">
	<div class="large-12 columns">
		<div class="box bg-white">
			<div class="box-body pad-forty" style="display: block;">
				{% for flashMessage in app.session.flashbag.get('msgSuccess') %}
					{{ flashMessage }}
				{% endfor %}

				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class':"form-horizontal", 'id':'new_region' }}) }}
				{{ form_errors(form) }}
				<div class="row">
					<div class="large-6 columns">
						<div class="form-group">
							{{ form_label(form.country, 'country' | trans , { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
							{{ form_errors(form.country) }}
							<div class="col-sm-5">
								{{ form_widget(form.country, { 'attr': {'class': 'form-control validate[required]'} }) }}
							</div>
						</div>
					</div>
					<div class="large-6 columns">
						{% if region.photo %}
							<img src="{{ region.webPath | imagine_filter('my_thumb') }}" >
						{% endif %}
					</div>
					<div class="large-6 columns">
						<div class="form-group">
							{{ form_label(form.file, 'photo' | trans , { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
							{{ form_errors(form.file) }}
							<div class="col-sm-5">
								{{ form_widget(form.file, { 'attr': {'class': 'form-control validate[required]'} }) }}
							</div>
						</div>
					</div>
					<div class="row"></div>
					<div class="large-6 columns">
						<div class="form-group">
							{{ form_label(form.hr, 'hr' | trans , { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
							{{ form_errors(form.hr) }}
							<div class="col-sm-5">
								{{ form_widget(form.hr, { 'attr': {'class': 'form-control validate[required]'} }) }}
							</div>
						</div>
					</div>
					<div class="large-6 columns">
						<div class="form-group">
							{{ form_label(form.en, 'en' | trans , { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
							{{ form_errors(form.en) }}
							<div class="col-sm-5">
								{{ form_widget(form.en, { 'attr': {'class': 'form-control validate[required]'} }) }}
							</div>
						</div>
					</div>
					<div class="large-12 columns">
						{{ form_rest(form) }}
					</div>
					<div class="large-12 columns">
						<div class="form-group">
							<div class="col-sm-5 col-sm-offset-3">
								<input type="submit" name="register" class="btn bg-blue" value="{{ 'create' | trans }}" />
							</div>
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="large-6 columns">
		<a  class="btn bg-green" href="{{ path('admin_location_regions', {'_locale': app.request.attributes.get('_locale')}) }}">{{ 'Back to Regions' | trans }}</a>
	</div>
</div>


{% endblock %}