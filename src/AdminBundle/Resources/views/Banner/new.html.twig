{% extends 'admin.html.twig' %}

{% block content %}
<div class="row no-pad">
	<div class="large-12 columns">
		<div class="box bg-white">
			<div class="box-body pad-forty" style="display: block;">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class':"form-horizontal", 'id':'new_banner' }}) }}
				{{ form_errors(form) }}
				<div class="row">
					<div class="large-12 columns">
						<h4>{{ 'Add new Banner' | trans }}</h4>
						<hr>
					</div>

					<div class="large-6 columns">
						<div class="form-group">
							{{ form_label(form.title, 'Title' | trans , { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
							{{ form_errors(form.title) }}
							<div class="col-sm-5">
								{{ form_widget(form.title, { 'attr': {'class': 'form-control validate[required]', 'placeholder': 'choose_option' | trans} }) }}
							</div>
						</div>
					</div>
                    <div class="large-6 columns">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">{{ 'country' | trans }}</label>
                            <div class="col-sm-5">
                                <input type="text" name="country" class="countryAutocomplete form-control" >
                            </div>
                        </div>
                    </div>

                    <div class="large-6 columns">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">{{ 'region' | trans }}</label>
                            <div class="col-sm-5">
                                <input type="text" name="region" class="regionAutocomplete form-control" >
                            </div>
                        </div>
                    </div>

                    <div class="large-6 columns">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">{{ 'subregion' | trans }}</label>
                            <div class="col-sm-5">
                                <input type="text" name="subregion" class="subregionAutocomplete form-control" >
                            </div>
                        </div>
                    </div>

                    <div class="large-6 columns">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">{{ 'city' | trans }}</label>
                            <div class="col-sm-5">
                                <input type="text" name="city" class="cityAutocomplete form-control" >
                            </div>
                        </div>
                    </div>
					<div class="large-6 columns">
						<div class="form-group">
							{{ form_label(form.languages, 'languages' | trans , { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
							{{ form_errors(form.languages) }}
							<div class="col-sm-5">
								{{ form_widget(form.languages, { 'attr': {'class': 'form-control validate[required]', 'placeholder': 'choose_option' | trans} }) }}
							</div>
						</div>
					</div>
					<div class="large-6 columns">
						<div class="form-group">
							{{ form_label(form.file, 'Upload file' | trans , { 'label_attr': {'class': 'col-sm-3 control-label'} }) }}
							{{ form_errors(form.file) }}
							<div class="col-sm-5">
								{{ form_widget(form.file, { 'attr': {'class': 'form-control validate[required]', 'placeholder': 'choose_option' | trans} }) }}
							</div>
						</div>
					</div>
				</div>

	{{ form_rest(form) }}

	<div class="form-group">
		<div class="col-sm-5 col-sm-offset-3">
			<button type="submit" name="createBanner" class="btn bg-blue" >{{ 'create' | trans }}</button>
		</div>
	</div>

	{{ form_end(form) }}
	<hr>
	<a class="btn bg-blue" href="{{ path('admin_banners', {'_locale': app.request.attributes.get('_locale')}) }}">{{ 'Back to Banners' | trans }}</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{asset('bundles/app/js/location_autocomplete.js')}}"></script>

{% endblock %}