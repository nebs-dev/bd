{% extends 'base.html.twig' %}
{% block content %}
    <div class="sticky-single">
        {% block foundation_header %}
            {% include 'includes/foundation-header.html.twig' %}
        {% endblock %}
        <div class="single-head-container">
            {# Booking form #}
            {{ form_start(
            checkOutForm, {
            'method': 'POST',
            'action': path('app_accommodation_checkout',
            {'_locale': app.request.attributes.get('_locale'), 'id': accommodation.id }),
            'attr': {'novalidate': 'novalidate', 'class':"form-horizontal", 'id':'checkOutForm'}
        }
        ) }}
        <div class="row">
            <div class="large-3 columns">
                {{ form_errors(checkOutForm.unit) }}
