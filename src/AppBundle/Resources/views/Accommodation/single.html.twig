                    <label for="">{{'Select_Unit' | trans }}</label>
                    {{ form_widget(checkOutForm.unit,
                    { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="large-3 columns">
                <div class="row collapse">
                    <label for="search_fromDate">{{ 'Check_in' | trans }}
                        <span class="label-text-lighten">{{ 'date' | trans }}</span>
                    </label>
                    <div class="small-10 columns">
                        {{ form_errors(checkOutForm.checkIn) }}
                        {{ form_widget(checkOutForm.checkIn,
                        {
                        'attr' : {
                        'size'     : '16',
                        'readonly' : 'true',
                        'class'    : 'datepicker'
                    }
                }) }}
            </div>
            <div class="small-2 columns calendar-input1">
                <span class="postfix">
                    <i class="input-calendar fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="large-3 columns">
        <div class="row collapse">
            <label for="search_fromDate">{{ 'Check_in' | trans }}
                <span class="label-text-lighten">{{ 'date' | trans }}</span>
            </label>
            <div class="small-10 columns">
                {{ form_errors(checkOutForm.checkOut) }}
                {{ form_widget(checkOutForm.checkOut,
                {
                'attr' : {
                'size'     : '16',
                'readonly' : 'true',
                'class'    : 'datepicker'
            }
        }) }}
    </div>
    <div class="small-2 columns calendar-input1">
        <span class="postfix">
            <i class="input-calendar fa fa-calendar"></i>
        </span>
    </div>
</div>
</div>
{{ form_rest(checkOutForm) }}
