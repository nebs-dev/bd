{% extends 'base.html.twig' %}

{% block content %}
	{% for flashMessage in app.session.flashbag.get('msgSuccess') %}
		<div data-alert class="alert-box success radius">
			{{ flashMessage }}
			<a href="#" class="close">&times;</a>
		</div>
	{% endfor %}
	{% for flashMessage in app.session.flashbag.get('msgError') %}

		<div data-alert class="alert-box warning radius">
			{{ flashMessage }}
			<a href="#" class="close">&times;</a>
		</div>

	{% endfor %}
	<div class="row" id="loginForm93">
		<div class="login-container small-centered column">
			<div class="large-12 columns">
				<div class="large-12 columns">
                <h2 class="login-heading">
                    {{'LOG_IN_TO_BOOK_WITH' | trans }}
                </h2>
                <span class="login-all-logo"></span>

            </div>
            	{% for flashMessage in app.session.flashbag.get('formErrors') %}
				<div class="box bg-red" style="padding: 10px;">
					hehpr
					{{ flashMessage }}
				</div>
			{% endfor %}
				<form class="form-horizontal"  method="post" action="{{ path('login_check') }}">
					<div class="row">
						<div class="large-12 columns">
							<input type="text" name="_username" class="login-all-username" required="required" placeholder="Username">
						</div>
						<div class="large-12 columns">

							<input type="password" name="_password" class="login-all-password" placeholder="Password" required="required">
						</div>
						<div class="large-12 columns">

							<button type="submit" name="login" class="login-screen-button">{{ 'Login' | trans }}</button>

						</div>
						<div class="large-12 columns">
						<section class="bottom-login-links">
							<a  href="{{ path('user_forgot_password', {'_locale': app.request.attributes.get('_locale')}) }}">{{ 'Forgot password?' | trans }}</a>
							<span>{{ 'Dont_have_an_account' | trans }}</span>
						</section>
						</div>
						<div class="large-12 columns">
						<section class="bottom-login-register">
								<a  href="{{ path('user_registration', {'_locale': app.request.attributes.get('_locale'), 'role': 'guest'}) }}">{{ 'REGISTER' | trans }}</a>
							
						</section>
							
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}